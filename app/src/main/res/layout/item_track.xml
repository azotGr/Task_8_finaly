<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/track_item_padding"
    android:paddingStart="13dp">

    <ImageView
        android:id="@+id/trackImage"
        android:layout_width="@dimen/track_item_image_size"
        android:layout_height="@dimen/track_item_image_size"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/trackName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"
            android:maxWidth="@dimen/_300dp"
            android:singleLine="true"
            android:textColor="@color/image_tint_sett_return"
            android:textFontWeight="400"
            android:textSize="@dimen/text_size_medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1dp"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/_12dp">

            <TextView
                android:id="@+id/artistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/ys_display_regular"
                android:maxWidth="@dimen/_150dp"
                android:singleLine="true"
                android:textColor="@color/image_tint_sett"
                android:textFontWeight="400"
                android:textSize="@dimen/text_small_for_search" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5dp"
                android:src="@drawable/ellipse_1"
                app:tint="@color/image_tint_sett" />

            <TextView
                android:id="@+id/trackTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/ys_display_regular"
                android:maxWidth="@dimen/_150dp"
                android:singleLine="true"
                android:textColor="@color/image_tint_sett"
                android:textFontWeight="400"
                android:textSize="@dimen/text_small_for_search" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/arrow_forward"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_24dp"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="@dimen/_5dp"
        android:layout_marginStart="@dimen/_8dp"
        android:layout_marginEnd="@dimen/_5dp"
        android:src="@drawable/light_mode6"
        app:tint="@color/image_tint_sett" />
</LinearLayout>