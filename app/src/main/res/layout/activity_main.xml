<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#3772E7">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textPlaylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Playlist maker"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginBottom="24dp"
            android:paddingStart="16dp" >
        </TextView>

    </FrameLayout>

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:text="Поиск"
        android:textColor="@color/black"
        app:icon="@drawable/light_mode"
        app:iconGravity="textStart"
        app:iconTint="@color/black"
        app:cornerRadius="16dp"
        android:layout_marginStart ="16dp"
        android:layout_marginEnd="16dp"/>


    <Button
        android:id="@+id/buttonMedia"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:text="Медиатека"
        android:textColor="@color/black"
        app:cornerRadius="16dp"
        app:icon="@drawable/light_mode1"
        app:iconGravity="textStart"
        app:iconTint="@color/black"
        android:paddingStart="16dp"
        android:layout_marginStart ="16dp"
        android:layout_marginEnd="16dp"/>

    <Button
        android:id="@+id/buttonSetting"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:text="Настройки"
        android:textColor="@color/black"
        app:cornerRadius="16dp"
        app:icon="@drawable/light_mode2"
        app:iconGravity="textStart"
        app:iconTint="@color/black"
        android:paddingStart="16dp"
        android:layout_marginStart ="16dp"
        android:layout_marginEnd="16dp"/>



</LinearLayout>