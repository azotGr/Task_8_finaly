<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_4dp">

        <ImageButton
            android:id="@+id/buttonReturn"
            android:layout_width="@dimen/_48dp"
            android:layout_height="@dimen/_48dp"
            android:backgroundTint="@color/white"
            android:paddingVertical="@dimen/_4dp"
            android:src="@drawable/light_mode3"
            android:contentDescription = "@string/no"
            />

        <TextView
            android:id="@+id/textSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textColor="@color/black"
            android:textSize="@dimen/_22sp"
            android:paddingTop="@dimen/_8dp">

        </TextView>

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_24dp"
        tools:ignore="UseSwitchCompatOrMaterialXml">
        <Switch
            android:id="@+id/switchDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingEnd="@dimen/_10dp"
            android:paddingVertical="@dimen/_21dp">
        </Switch>
        <TextView
            android:id="@+id/textDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/dark_mode"
            android:layout_marginStart="16dp"
            android:paddingVertical="21dp">
        </TextView>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textRepost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/share"
            android:layout_marginStart="@dimen/_16dp"
            android:paddingVertical="@dimen/_21dp">
        </TextView>
        <ImageView
            android:id="@+id/imageRepost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/light_mode5"
            android:paddingVertical="@dimen/_21dp"
            android:layout_gravity="end"
            android:paddingEnd="@dimen/_18dp"
            >
        </ImageView>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/support"
            android:layout_marginStart="16dp"
            android:paddingVertical="21dp">
        </TextView>
        <ImageView
            android:id="@+id/imageSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/light_mode7"
            android:paddingVertical="@dimen/_21dp"
            android:layout_gravity="end"
            android:paddingEnd="@dimen/_18dp"
            >
        </ImageView>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/terms_of_use"
            android:layout_marginStart="@dimen/_16dp"
            android:paddingVertical="@dimen/_21dp">
        </TextView>
        <ImageView
            android:id="@+id/imageRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/light_mode6"
            android:paddingVertical="@dimen/_21dp"
            android:layout_gravity="end"
            android:paddingEnd="@dimen/_18dp"
            >
        </ImageView>
    </FrameLayout>
</LinearLayout>