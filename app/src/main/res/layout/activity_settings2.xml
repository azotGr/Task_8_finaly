<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <ImageButton
            android:id="@+id/buttonReturn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/white"
            android:paddingVertical="4dp"
            android:src="@drawable/light_mode3"
            android:contentDescription = "no"
            />

        <TextView
            android:id="@+id/textSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Настройки"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:paddingTop="8dp">

        </TextView>

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        tools:ignore="UseSwitchCompatOrMaterialXml">
        <Switch
            android:id="@+id/switchDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingEnd="10dp"
            android:paddingVertical="21dp">
        </Switch>
        <TextView
            android:id="@+id/textDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Темная тема"
            android:layout_marginStart="16dp"
            android:paddingVertical="21dp">
        </TextView>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textRepost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Поделиться приложением"
            android:layout_marginStart="16dp"
            android:paddingVertical="21dp">
        </TextView>
        <ImageView
            android:id="@+id/imageRepost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/light_mode5"
            android:paddingVertical="21dp"
            android:layout_gravity="end"
            android:paddingEnd="18dp"
            >
        </ImageView>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Написать в поддержку"
            android:layout_marginStart="16dp"
            android:paddingVertical="21dp">
        </TextView>
        <ImageView
            android:id="@+id/imageSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/light_mode7"
            android:paddingVertical="21dp"
            android:layout_gravity="end"
            android:paddingEnd="18dp"
            >
        </ImageView>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пользовательское соглашение"
            android:layout_marginStart="16dp"
            android:paddingVertical="21dp">
        </TextView>
        <ImageView
            android:id="@+id/imageRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/light_mode6"
            android:paddingVertical="21dp"
            android:layout_gravity="end"
            android:paddingEnd="18dp"
            >
        </ImageView>
    </FrameLayout>
</LinearLayout>