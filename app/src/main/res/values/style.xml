<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppThemeOne" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/background_sett</item>
        <item name="colorPrimaryDark">@color/background_sett</item>
        <item name="android:statusBarColor">@color/background_sett</item>

    </style>

    <!-- Стиль для кнопок на главном экране -->

    <style name="ButtonStyleMain" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/_16dp</item>
        <item name="android:layout_marginStart">@dimen/_16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">@dimen/_16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">@dimen/_16dp</item>
        <item name="iconTint">@color/black</item>
        <item name ="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <!-- Стиль TextView для главного экрана -->

    <style name="TextStyleMain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/_24dp</item>
        <item name="android:paddingStart">@dimen/_16dp</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <!-- Стиль TextView для настроек -->

    <style name="TextStyleSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_sett</item>
        <item name="android:layout_marginStart">@dimen/_16dp</item>
        <item name="android:paddingVertical">@dimen/_21dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <!-- Стиль для иконок в настройках -->

    <style name="ImageStyleSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/_21dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:tint">@color/image_tint_sett</item>
    </style>

    <!-- Стиль для кнопки назад в настройках -->

    <style name="ImageMainStyleSettings">
        <item name="android:layout_width">@dimen/_48dp</item>
        <item name="android:layout_height">@dimen/_48dp</item>
        <item name="android:paddingVertical">@dimen/_4dp</item>
        <item name="android:contentDescription">@string/no</item>
        <item name="android:backgroundTint">@color/background_sett</item>
        <item name="android:tint">@color/image_tint_sett_return</item>
    </style>

    <!-- Стиль шрифта-->

    <style name="ButtonFontStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TextStyleSearch" parent="TextStyleSettings">
        <item name="android:layout_marginStart">@dimen/_0dp</item>
        <item name="android:paddingVertical">@dimen/_10dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:paddingLeft">@dimen/_12dp</item>
        <item name="android:textSize">@dimen/_22sp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">@dimen/layout_margin_start_end</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin_start_end</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/layout_margin_bottom</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>

    <style name="ButtonBackForPlayList">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:backgroundTint">@color/background_sett</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>


</resources>