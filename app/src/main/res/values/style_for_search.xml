<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ForAll">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">wrap_content</item>
    </style>

    <style name="ForAllError">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
    </style>

    <!-- Стиль RelativeLayout для поиска -->
    <style name="RelativeLayout" parent="ForAll">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>


    <!-- Стиль EditText для поиска -->
    <style name="EditText" parent = "ForAll">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">8.5dp</item>
        <item name="android:paddingBottom">8.5dp</item>
        <item name="android:singleLine">true</item>
    </style>


    <!-- Стиль HintTextView для поиска -->
    <style name="SearchHintTextView" parent = "ForAll">
        <item name="android:padding">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Стиль ClearButton для поиска -->
    <style name="ClearButton" parent = "ForAllError">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Стиль RecyclerView для поиска -->
    <style name="RecyclerView" parent = "ForAll">
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:layout_marginVertical">24dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Стиль ErrorLayout для поиска -->
    <style name="ErrorLayout" parent="ForAll">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Стиль UpdateLinearLayout для поиска -->
    <style name="UpdateLinearLayout" parent="ForAllError">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Стиль UpdateButton для поиска -->
    <style name="UpdateButton" parent="ForAllError">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/update_button_text_size</item>
    </style>

    <!-- Стиль LinearLayoutHistorySearch для поиска -->
    <style name="HistorySearchLinearLayout" parent="ForAll">
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">visible</item>
    </style>

    <!-- Стиль SearchHistoryHeaderTextView для поиска -->
    <style name="SearchHistoryHeaderTextView" parent="ForAll">
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:gravity">top|center</item>
        <item name="android:textSize">19sp</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Стиль SearchHistoryHeaderTextView для поиска -->
    <style name="RecyclerViewHistory" >
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:visibility">visible</item>
    </style>

    <!-- Стиль HistoryClear для поиска -->
    <style name="HistoryClear" parent = "ForAllError">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:visibility">visible</item>
    </style>
</resources>